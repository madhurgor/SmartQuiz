{
  "manifest_version": 3,
  "name": "Tabs Tracker",
  "version": "1.0",
  "description": "Shows information about all open tabs and highlights the current tab",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tabs Tracker"
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css", "css/quiz-popup.css"]
    }
  ],
  "icons": {}
}
